POST        /tenants/:name/generateDesignDocs        controllers.TenantsController.initializeDatabase(name)
POST        /tenants/:name/sync-to                   controllers.TenantsController.syncTo(name)
POST        /tenants/:name/sync-from                 controllers.TenantsController.syncFrom(name)

GET         /databases                               controllers.DatabaseController.list

GET         /ping                                    controllers.StatusController.ping


