GET         /                                        controllers.HomeController.index

GET         /tenants                                 controllers.TenantsController.list
GET         /tenants/new                             controllers.TenantsController.createNew
POST        /tenants/new                             controllers.TenantsController.createNewPost
GET         /tenants/:name                           controllers.TenantsController.details(name)
POST        /tenants/:name/generateDesignDocs        controllers.TenantsController.initializeDatabase(name)
POST        /tenants/:name/sync-to                   controllers.TenantsController.syncTo(name)
POST        /tenants/:name/sync-from                 controllers.TenantsController.syncFrom(name)

GET         /databases                               controllers.DatabaseController.list

GET         /ping                                    controllers.StatusController.ping


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                            controllers.Assets.versioned(path="/public", file: Asset)
GET         /webjars/*file                           controllers.WebJarAssets.at(file)
